package br.ce.wcaquino.secao3;

import java.util.List;

import org.junit.Assert;
import org.junit.FixMethodOrder;
import org.junit.Test;
import org.junit.runners.MethodSorters;
import org.openqa.selenium.Alert;
import org.openqa.selenium.By;
import org.openqa.selenium.Dimension;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.Select;

@FixMethodOrder(MethodSorters.NAME_ASCENDING)
public class TestCampoTreinamento {

	@Test
	public void t01_testPegarTituloDaPagina() {

		WebDriver driver = new ChromeDriver();
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);
		Assert.assertEquals("Campo de Treinamento", driver.getTitle()); // Verifica se o título é 'Google'
		driver.quit();

	}

	@Test
	public void t02_deveInteragirComTextField() {

		WebDriver driver = new ChromeDriver();
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);
		Assert.assertEquals("Campo de Treinamento", driver.getTitle()); // Verifica se o título é 'Google'

		driver.findElement(By.id("elementosForm:nome")).sendKeys("Texto que eu quero escrever");

		String valorEscrito = driver.findElement(By.id("elementosForm:nome")).getAttribute("value");
		Assert.assertEquals("Texto que eu quero escrever", valorEscrito);

		driver.quit();

	}

	@Test
	public void t03_deveInteragirComTextArea() {

		WebDriver driver = new ChromeDriver();
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);

		driver.findElement(By.id("elementosForm:sugestoes")).sendKeys("Teste");
		String valorEscrito = driver.findElement(By.id("elementosForm:sugestoes")).getAttribute("value");
		Assert.assertEquals("Teste", valorEscrito);

		driver.quit();

	}

	@Test
	public void deveInteragirComRadioButton() {

		WebDriver driver = new ChromeDriver();
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);

		driver.findElement(By.id("elementosForm:sexo:0")).click();
		driver.findElement(By.id("elementosForm:sexo:0")).click();
		boolean sexoChecado = driver.findElement(By.id("elementosForm:sexo:0")).isSelected();
		Assert.assertTrue(sexoChecado);

		driver.quit();

	}

	@Test
	public void deveInteragirComCheckBox() {

		WebDriver driver = new ChromeDriver();
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);

		driver.findElement(By.id("elementosForm:comidaFavorita:2")).click();
		boolean comidaChecada = driver.findElement(By.id("elementosForm:comidaFavorita:2")).isSelected();
		Assert.assertTrue(comidaChecada);

		driver.quit();

	}

	@Test
	public void deveInteragirComComboBox_1() {

		WebDriver driver = new ChromeDriver();
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);

		WebElement element = driver.findElement(By.id("elementosForm:escolaridade"));
		Select combo = new Select(element);
		combo.selectByIndex(3);
		driver.quit();

	}

	@Test
	public void deveInteragirComComboBox_2() {

		WebDriver driver = new ChromeDriver();
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);

		WebElement element = driver.findElement(By.id("elementosForm:escolaridade"));
		Select combo = new Select(element);
		combo.selectByValue("superior");
		driver.quit();

	}

	@Test
	public void deveInteragirComComboBox_3() {

		WebDriver driver = new ChromeDriver();
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);

		WebElement element = driver.findElement(By.id("elementosForm:escolaridade"));
		Select combo = new Select(element);
		combo.selectByVisibleText("Mestrado");

		Assert.assertEquals("Mestrado", combo.getFirstSelectedOption().getText());
		driver.quit();

	}

	@Test
	public void deveVerificarValorCombo() {

		WebDriver driver = new ChromeDriver();
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);

		WebElement element = driver.findElement(By.id("elementosForm:escolaridade"));
		Select combo = new Select(element);
		List<WebElement> options = combo.getOptions();

		boolean encontrou = false;
		for (WebElement option : options) {
			if (option.getText().equals("Mestrado")) {
				encontrou = true;
				break;
			}
		}

		Assert.assertEquals(8, options.size());
		Assert.assertTrue(encontrou);

		driver.quit();

	}

	@Test
	public void deveVerificarValorComboMultiplo() {

		WebDriver driver = new ChromeDriver();
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);

		WebElement element = driver.findElement(By.id("elementosForm:esportes"));
		Select combo = new Select(element);
		combo.selectByVisibleText("Natacao");
		combo.selectByVisibleText("Corrida");
		combo.selectByVisibleText("O que eh esporte?");

		List<WebElement> options = combo.getAllSelectedOptions();
		Assert.assertEquals(3, options.size());

		combo.deselectByVisibleText("Corrida");
		options = combo.getAllSelectedOptions();
		Assert.assertEquals(2, options.size());

		driver.quit();
	}

	@Test
	public void deveInteragirComBotoes() {

		WebDriver driver = new ChromeDriver();
		driver.manage().window().setSize(new Dimension(1200, 765));
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);
		WebElement button = driver.findElement(By.id("buttonSimple"));
		button.click();
		Assert.assertEquals("Obrigado!", button.getAttribute("value"));

		driver.quit();
	}
	
	@Test
	public void deveInteragirComLinks() {

		WebDriver driver = new ChromeDriver();
		driver.manage().window().setSize(new Dimension(1200, 765));
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);

		driver.findElement(By.linkText("Voltar")).click();
		String texto = driver.findElement(By.id("resultado")).getText();
		Assert.assertEquals("Voltou!", texto);

		driver.quit();
	}

	@Test
	public void deveBuscarTextosDentroDaTagBody() {

		WebDriver driver = new ChromeDriver();
		driver.manage().window().setSize(new Dimension(1200, 765));
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);
		
		boolean encontrouTexto = driver.findElement(By.tagName("body")).getText().contains("Campo de Treinamento"); 
		Assert.assertTrue(encontrouTexto);

		driver.quit();
	}

	@Test
	public void deveBuscarTextosDentroDaTagH3() {

		WebDriver driver = new ChromeDriver();
		driver.manage().window().setSize(new Dimension(1200, 765));
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);
		driver.findElement(By.linkText("Voltar")).click();

		String texto = driver.findElement(By.tagName("h3")).getText();
		Assert.assertEquals("Campo de Treinamento", texto);
		
		texto = driver.findElement(By.tagName("span")).getText();
		Assert.assertEquals("Cuidado onde clica, muitas armadilhas...", texto);
		
		driver.quit();
	}

	@Test
	public void deveBuscarTextosDentroDoPrimeiroTagSpan() {

		WebDriver driver = new ChromeDriver();
		driver.manage().window().setSize(new Dimension(1200, 765));
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);
		driver.findElement(By.linkText("Voltar")).click();

		String texto = driver.findElement(By.tagName("span")).getText();
		Assert.assertEquals("Tabela sem header", texto);
		
		driver.quit();
	}

	@Test
	public void deveBuscarTextosDentroDaSegundaTagSpan() {

		WebDriver driver = new ChromeDriver();
		driver.manage().window().setSize(new Dimension(1200, 765));
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);
		driver.findElement(By.linkText("Voltar")).click();

		String texto = driver.findElement(By.className("facilAchar")).getText();
		Assert.assertEquals("Cuidado onde clica, muitas armadilhas...", texto);
		
		driver.quit();
	}

	@Test
	public void deveInteragirComAlertConfirm() {

		WebDriver driver = new ChromeDriver();
		driver.manage().window().setSize(new Dimension(1200, 765));
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);
		
		driver.findElement(By.id("confirm")).click();
		Alert alert = driver.switchTo().alert();
		Assert.assertEquals("Confirm Simples", alert.getText());
		
//		driver.quit();
	}
}
