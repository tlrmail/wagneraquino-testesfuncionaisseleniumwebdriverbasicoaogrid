package br.ce.wcaquino.secao3;

import org.junit.Assert;
import org.junit.Test;
import org.openqa.selenium.Alert;
import org.openqa.selenium.By;
import org.openqa.selenium.Dimension;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

public class TestFramesEJanelas {

	@Test
	public void deveInteragirComFrame() {

		WebDriver driver = new ChromeDriver();
		driver.manage().window().setSize(new Dimension(1200, 765));
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);
		
		//Muda o foco para o frame
		driver.switchTo().frame("frame1");
		
		driver.findElement(By.id("frameButton")).click();
		Alert alert = driver.switchTo().alert();
		String msg = alert.getText();
		Assert.assertEquals("Frame OK!", msg);
		alert.accept();
		//Devolve o foco para o body
		driver.switchTo().defaultContent();
		driver.findElement(By.id("elementosForm:nome")).sendKeys(msg);
		
	}	
	
	@Test
	public void deveInteragirComJanelas() {

		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);

		driver.findElement(By.id("buttonPopUpEasy")).click();
		driver.switchTo().window("Popup");
		driver.findElement(By.tagName("textarea")).sendKeys("Deu certo?");
		driver.close();
		driver.switchTo().window("");
		driver.findElement(By.tagName("textarea")).sendKeys("e agora?");
	}

	@Test
	public void deveInteragirComJanelasSemTitulo() {

		WebDriver driver = new ChromeDriver();
		driver.manage().window().maximize();
		String pathUrl = System.getProperty("user.dir") + "\\src\\main\\resources\\componentes.html";
		driver.get(pathUrl);

		driver.findElement(By.id("buttonPopUpHard")).click();
		System.out.println("Id da janela ativa: " + driver.getWindowHandle());
		System.out.println("Ids das janelas: " + driver.getWindowHandles());
	}
	
}
